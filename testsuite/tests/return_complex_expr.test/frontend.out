with GC;
with GC.Standard; use GC.Standard;
with Ada.Text_IO; use Ada.Text_IO;
procedure Test is
   AGC_Base_Root_Count : Natural := GC.Root_Count;
   type Integer_Access is access all Integer;
   function AGC_Register is new GC.Register (Integer_Access);
   function AGC_Temp is new GC.Temp (Integer_Access);
   function Inner (X : Integer) return Integer_Access is
      AGC_Base_Root_Count : Natural := GC.Root_Count;
   begin
      return
        AGC_Ret : Integer_Access :=
          AGC_Temp (0, AGC_Register (new Integer'(X))) do
         GC.Untemp (0);
         null;
         GC.Pop_Roots (AGC_Base_Root_Count);
      end return;
      GC.Pop_Roots (AGC_Base_Root_Count);
   end Inner;
   function Add (A, B, C : Integer) return Integer is
      AGC_Base_Root_Count : Natural := GC.Root_Count;
   begin
      return
        AGC_Ret : Integer :=
          AGC_Temp (1, Inner (A)).all + AGC_Temp (1, Inner (B)).all +
          AGC_Temp (1, Inner (C)).all
      do
         GC.Untemp (1);
         null;
         GC.Pop_Roots (AGC_Base_Root_Count);
      end return;
      GC.Pop_Roots (AGC_Base_Root_Count);
   end Add;
   A : Integer := Add (1, 2, 3);
begin
   GC.Collect;
   GC.Pop_Roots (AGC_Base_Root_Count);
end Test;
