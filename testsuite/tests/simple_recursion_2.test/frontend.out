with GC;
with Ada.Text_IO; use Ada.Text_IO;
procedure Test is
   AGC_Root_Count : Natural := GC.Root_Count;
   type Integer_Access is access all Integer;
   procedure Foo (N : Integer_Access) is
      AGC_Root_Count : Natural                := GC.Root_Count;
      X              : aliased Integer_Access :=
        GC.Temp (0, GC.Register (new Integer'(N.all + 1)));
   begin
      GC.Untemp (0);
      GC.Push_Root (X'Address);
      if X.all < 100 then
         Foo (X);
      end if;
      GC.Pop_Roots (AGC_Root_Count);
   end Foo;
begin
   Foo (GC.Temp (1, GC.Register (new Integer'(0))));
   GC.Untemp (1);
   GC.Collect;
   GC.Pop_Roots (AGC_Root_Count);
end Test;
