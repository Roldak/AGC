with GC;
with Ada.Text_IO; use Ada.Text_IO;
procedure Test is
   AGC_Root_Count : Natural := GC.Root_Count;
   type Integer_Access is access all Integer;
   function Inner (X : Integer) return Integer_Access is
      AGC_Root_Count : Natural := GC.Root_Count;
   begin
      return
        AGC_Ret : Integer_Access := GC.Temp (0, GC.Register (new Integer'(X)))
      do
         GC.Untemp (0);
      end return;
      GC.Pop_Roots (AGC_Root_Count);
   end Inner;
   function Add (A, B : Integer_Access) return Integer is
      AGC_Root_Count : Natural := GC.Root_Count;
   begin
      return AGC_Ret : Integer := A.all + B.all do
         null;
      end return;
      GC.Pop_Roots (AGC_Root_Count);
   end Add;
   A : Integer := Add (GC.Temp (1, Inner (1)), GC.Temp (1, Inner (2)));
begin
   GC.Untemp (1);
   GC.Collect;
   GC.Pop_Roots (AGC_Root_Count);
end Test;
