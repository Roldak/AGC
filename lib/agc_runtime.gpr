library project AGC_Runtime is
   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Library_Name use "agc_runtime";
   for Library_Dir use ".";

   package Compiler is
      Mode := external("BUILD_MODE", "debug");
      case Mode is
         when "debug" =>
            for Switches ("Ada") use ("-g");
         when "release" =>
            for Switches ("Ada") use ("-O3", "-flto");
         when others =>
            null;
      end case;
   end Compiler;
end AGC_Runtime;
